<?xml version="1.0" encoding="UTF-8"?>
<!-- Parameters for spin and concentration distribution function constraints -->
<!-- 29-April-2021                                                           -->
<parameters>
  <formatVersion>2</formatVersion>
  <version>0.9.4</version>

  <!-- Task control -->
  <task value="evolveForests">
    <walltimeMaximum value="7200"/>
  </task>
  <evolveForestsWorkShare value="cyclic"/>
  
  <!-- Component selection -->
  <componentBasic              value="standard"     />
  <componentBlackHole          value="null"         />
  <componentDarkMatterProfile  value="virialTheorem"/>
  <componentDisk               value="null"         />
  <componentHotHalo            value="null"         />
  <componentSatellite          value="standard"     />
  <componentSpheroid           value="null"         />
  <componentMergingStatistics  value="standard"     />
  <componentSpin               value="vitvitska"    />

  <!-- Cosmological parameters matched to MDPL -->
  <cosmologyFunctions  value="matterLambda"/>
  <cosmologyParameters value="simple"       >
    <HubbleConstant  value="67.77000"/>
    <OmegaMatter     value=" 0.307115"/>
    <OmegaDarkEnergy value=" 0.692885"/>
    <OmegaBaryon     value=" 0.048206"/>
    <temperatureCMB  value=" 2.725480"/>
  </cosmologyParameters>

  <!-- Power spectrum options matched to MDPL2 -->
  <transferFunction        value="CAMB"    />
  <powerSpectrumPrimordial value="powerLaw" >
    <index               value="0.96"/>
    <wavenumberReference value="1.00"/>
    <running             value="0.00"/>
  </powerSpectrumPrimordial>
  <powerSpectrumPrimordialTransferred value="simple"       />
  <cosmologicalMassVariance           value="filteredPower" >
    <sigma_8 value="0.8228"/>
  </cosmologicalMassVariance>
  
  <!-- Structure formation options -->
  <linearGrowth          value="collisionlessMatter"/>
  <haloMassFunction      value="shethTormen"         >
    <a             value="0.758359488694975"/>
    <p             value="0.331118219117848"/>
    <normalization value="0.289897200615808"/>
  </haloMassFunction>
  <criticalOverdensity   value="sphericalCollapseClsnlssMttrCsmlgclCnstnt"/>
  <virialDensityContrast value="sphericalCollapseClsnlssMttrCsmlgclCnstnt"/>

  <!-- Merger tree building options -->
  <mergerTreeConstructor value="build"/>
  <mergerTreeBuilder value="cole2000">
    <accretionLimit     value="0.01"/>
    <mergeProbability   value="0.10"/>
    <branchIntervalStep value="true"/>
  </mergerTreeBuilder>
  <mergerTreeBranchingProbability value="PCHPlus">
    <G0                 value="+1.1425468378985500"/>
    <gamma1             value="-0.3273597030267590"/>
    <gamma2             value="+0.0587448775510245"/>
    <gamma3             value="+0.6456170934757410"/>
    <accuracyFirstOrder value="+0.1000000000000000"/>
    <cdmAssumptions     value="true"               />
  </mergerTreeBranchingProbability>
  <mergerTreeBuildMasses value="sampledDistributionUniform">
    <!-- Minimum is 300 times the BigMDPL particle mass -->
    <massTreeMinimum value="1.044e13"/>
    <massTreeMaximum value="1.00e15"/>
    <treesPerDecade  value="2000"   />
  </mergerTreeBuildMasses>
  <mergerTreeBuildMassDistribution value="powerLaw">
    <exponent value="1.0"/>
  </mergerTreeBuildMassDistribution>
  <mergerTreeMassResolution value="scaled">
    <massResolutionMinimum    value="0.0e+0"/>
    <massResolutionFractional value="1.0e-3"/>
  </mergerTreeMassResolution>
  
  <!-- Substructure hierarchy options -->
  <mergerTreeNodeMerger value="singleLevelHierarchy"/>

  <!-- Dark matter halo structure options -->
  <darkMatterProfileDMO         value="NFW"       />
  <darkMatterProfileScaleRadius value="concentration" >
    <correctForConcentrationDefinition    value="true"              />
    <darkMatterProfileConcentration value="diemerKravtsov2014" >
      <alpha   value="1.12"/>
      <beta    value="1.69"/>
      <eta0    value="6.82"/>
      <eta1    value="1.5570009557643076"/>
      <kappa   value="0.69"/>
      <phi0    value="6.58"/>
      <phi1    value="1.37"/>
      <scatter value="0.00"/>
    </darkMatterProfileConcentration>
  </darkMatterProfileScaleRadius>
  <darkMatterProfileMinimumConcentration value="  2.0"/>
  <darkMatterProfileMaximumConcentration value="100.0"/>

  <!-- Concentration model -->
  <darkMatterProfileScaleVirialTheoremUnresolvedEnergy value="+0.5500"/>
  <darkMatterProfileScaleVirialTheoremMassExponent     value="+1.517"/>
  <darkMatterProfileScaleVirialTheoremEnergyBoost      value="+0.673"/>

  <!-- Dark matter halo spin -->
  <haloSpinDistribution value="bett2007"> <!-- Values from Benson (2017) -->
    <alpha   value="1.7044657787810300"/>
    <lambda0 value="0.0420508166675498"/>
  </haloSpinDistribution>
  <spinVitvitskaMassExponent value="1.1455744754766510"/>

  <!-- Galactic structure -->
  <galacticStructureSolver value="null"/>

  <!-- Halo accretion options -->
  <accretionHalo           value="zero"/>

  <!-- Satellite orbits -->
  <virialOrbit value="spinCorrelated">
    <alpha value="6.7353861072062271" />
    <virialOrbit value="li2020" >
    <mu1             value="+1.20"/>
    <mu2             value="+1.04"/>
    <sigma1          value="+0.20"/>
    <a0              value="+0.89"/>
    <a1              value="+0.30"/>
    <a2              value="-3.33"/>
    <a3              value="+0.56"/>
    <b1              value="-1.44"/>
    <b2              value="+9.60"/>
    <c               value="+0.43"/>
    <propagateOrbits value="true" />
    </virialOrbit>
  </virialOrbit>
  <satelliteOrbitStoreOrbitalParameters value="true"/>
  <satelliteMergingTimescales     value="zero"/>

  <!-- Merger tree evolution -->
  <mergerTreeEvolver     value="nonEvolving"/>
  <mergerTreeNodeEvolver value="standard"    >
    <odeToleranceAbsolute value="0.01"/>
    <odeToleranceRelative value="0.01"/>
  </mergerTreeNodeEvolver>

  <!-- Output options -->
  <galacticusOutputFileName  value="BigMDPL.hdf5"/>
  <mergerTreeOutputter value="analyzer">
  </mergerTreeOutputter>
  <outputTimes value="list">
    <redshifts value="0.0"/>
  </outputTimes>
  <outputAnalysis value="multi">
    <outputAnalysis value="spinDistribution">
      <fileName                     value="/home/abenson/Galacticus/datasets/static/darkMatter/spinDistributionFunctions_BigMDPL.hdf5"                     />
      <comment                      value="$9.96 &lt; \log_{10}(M_\mathrm{halo}/\mathrm{M}_\odot) \le 16.00$; $z=0.00$; BigMDPL halos"                     />
      <label                        value="BigMDPL"                                                                                                        />
      <targetLabel                  value="Klypin et al. (2015)"                                                                                           />
      <errorTolerant                value="true"                                                                                                           />
      <logNormalRange               value="1.420"                                                                                                          />
    </outputAnalysis>
    <outputAnalysis value="concentrationDistribution">
      <fileName                     value="/home/abenson/Galacticus/datasets/static/darkMatter/concentrationDistributionFunctions_BigMDPL_logM13.5_14.hdf5"/>
      <comment                      value="$13.50 &lt; \log_{10}(M_\mathrm{halo}/\mathrm{M}_\odot) \le 14.00$; $z=0.00$; BigMDPL halos"                    />
      <label                        value="BigMDPL_13.5_14"                                                                                                />
      <targetLabel                  value="Klypin et al. (2015)"                                                                                           />
    </outputAnalysis>
    <outputAnalysis value="concentrationDistribution">
      <fileName                     value="/home/abenson/Galacticus/datasets/static/darkMatter/concentrationDistributionFunctions_BigMDPL_logM14_14.5.hdf5"/>
      <comment                      value="$14.00 &lt; \log_{10}(M_\mathrm{halo}/\mathrm{M}_\odot) \le 14.50$; $z=0.00$; BigMDPL halos"                    />
      <label                        value="BigMDPL_14_14.5"                                                                                                />
      <targetLabel                  value="Klypin et al. (2015)"                                                                                           />
    </outputAnalysis>
    <outputAnalysis value="concentrationDistribution">
      <fileName                     value="/home/abenson/Galacticus/datasets/static/darkMatter/concentrationDistributionFunctions_BigMDPL_logM14.5_15.hdf5"/>
      <comment                      value="$14.50 &lt; \log_{10}(M_\mathrm{halo}/\mathrm{M}_\odot) \le 15.00$; $z=0.00$; BigMDPL halos"                    />
      <label                        value="BigMDPL_14.5_15"                                                                                                />
      <targetLabel                  value="Klypin et al. (2015)"                                                                                           />
    </outputAnalysis>
  </outputAnalysis>
  <nbodyHaloMassError value="trenti2010">
    <massParticle                value="3.48e10"/> <!-- Particle mass in BigMDPL -->
    <correlationNormalization    value="1.0"    />
    <correlationMassExponent     value="1.0"    />
    <correlationRedshiftExponent value="0.0"    />
  </nbodyHaloMassError>
  
</parameters>
