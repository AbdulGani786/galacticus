<?xml version="1.0" encoding="UTF-8"?>
<!-- Parameters for tutorial on computing dark matter-only merger trees - -->
<parameters>
  <formatVersion>2</formatVersion>
  <version>0.9.4</version>

  <!-- Specify tasks to perform -->
 <task value="multi">
      <task value="evolveForests"/>
      <task value="haloMassFunction">
         <haloMassMinimum value="10e7"/>
      </task>
  </task>
  
  <!-- Component selection -->
  <componentBasic             value="standard"/>
  <componentBlackHole         value="null"    />
  <componentDarkMatterProfile value="scale"   />
  <componentDisk              value="null"    />
  <componentHotHalo           value="null"    />
  <componentSatellite         value="standard"/>
  <componentSpheroid          value="null"    />
  <componentSpin              value="null"    />

  <!-- Cosmological parameters and options -->
  <cosmologyFunctions  value="matterLambda"/>
  <cosmologyParameters value="simple">
    <HubbleConstant  value="70.20000"/>
    <OmegaMatter     value=" 0.27250"/>
    <OmegaDarkEnergy value=" 0.72750"/>
    <OmegaBaryon     value=" 0.00000"/>
    <temperatureCMB  value=" 2.72548"/>
  </cosmologyParameters>

  <!-- Power spectrum options -->
  <transferFunction value="ETHOSDM">
    <alpha value="0.01727"/>
    <beta value="4.05"/>
    <gamma value="-20"/>
    <sigma value="0.2"/>
    <tau value="0.67"/>
    <kPeak value="50.0"/>
    <hPeak value="1"/>
    <h2 value="1.08"/>
    <cosmologyParameters value="simple">
      <HubbleConstant  value="70.20000"/>
      <OmegaMatter     value=" 0.27250"/>
      <OmegaDarkEnergy value=" 0.72750"/>
      <OmegaBaryon     value=" 0.04550"/>
      <temperatureCMB  value=" 2.72548"/>
    </cosmologyParameters>
    <transferFunction value="eisensteinHu1999">
      <neutrinoNumberEffective value="3.046"/>
      <neutrinoMassSummed value="0.000"/>
    </transferFunction>
  </transferFunction>
  <powerSpectrumPrimordial value="powerLaw">
    <index               value="0.961"/>
    <wavenumberReference value="1.000"/>
    <running             value="0.000"/>
  </powerSpectrumPrimordial>
  <powerSpectrumPrimordialTransferred value="simple"/>
  <cosmologicalMassVariance value="filteredPower">
    <sigma_8 value="0.807"/>
    <powerSpectrumWindowFunction value="ETHOS">
    </powerSpectrumWindowFunction>
    <monotonicInterpolation value = "false"/>
  </cosmologicalMassVariance>
  
  <!-- Structure formation options -->
  <linearGrowth          value="collisionlessMatter"                      />
  <haloMassFunction      value="ondaroMallea2021">
     <n_0 value="-1.0439"/>
     <n_1 value="-3.4809"/>
     <n_2 value="-0.3037"/>
     <a_0 value="0.1721"/>
     <a_1 value="0.2899"/>
     <haloMassFunction        value="shethTormen">
          <a value="0.7693"/>
          <p value="0.2074"/>
	  <normalization value="0.2861"/>
     </haloMassFunction>
  </haloMassFunction>

  <criticalOverdensity   value="sphericalCollapseClsnlssMttrCsmlgclCnstnt"/>
  <virialDensityContrast value="sphericalCollapseClsnlssMttrCsmlgclCnstnt"/>

  <!-- Merger tree building options -->
  <mergerTreeConstructor value="build" >
    <redshiftBase     value="0.0"/>
  </mergerTreeConstructor>
  <mergerTreeBuilder     value="cole2000" >
    <accretionLimit   value="0.1"/>
    <mergeProbability value="0.1"/>
  </mergerTreeBuilder>
  <mergerTreeBranchingProbability value="parkinsonColeHelly">
    <G0                 value="+0.57"/>
    <gamma1             value="+0.38"/>
    <gamma2             value="-0.01"/>
    <accuracyFirstOrder value="+0.10"/>
  </mergerTreeBranchingProbability>
  <mergerTreeBuildMasses value="sampledDistributionUniform">
    <massTreeMinimum value="1.0e13"/>
    <massTreeMaximum value="2.0e13"/>
    <treesPerDecade  value="100"   />
  </mergerTreeBuildMasses>
  <mergerTreeBuildMassDistribution value="powerLaw">
    <exponent value="1.0"/>
  </mergerTreeBuildMassDistribution> 
  <mergerTreeMassResolution value="fixed">
    <massResolution value="1.0e7"/>
  </mergerTreeMassResolution>
  <nodePropertyExtractor value="multi">
    <nodePropertyExtractor value="treeWeight"/>
    <nodePropertyExtractor value="nodeIndices"/>
  </nodePropertyExtractor>

  <!-- Substructure hierarchy options -->
  <mergerTreeNodeMerger value="singleLevelHierarchy"/>

  <!-- Dark matter halo structure options -->
  <darkMatterProfile               value="darkMatterOnly"  />
  <darkMatterProfileDMO            value="NFW"    />
  <darkMatterProfileConcentration value="schneider2015">
    <massFractionFormation value="0.05"/>
    <reference value="">
      <darkMatterParticle value="CDM"/>
      <criticalOverdensity value="sphericalCollapseClsnlssMttrCsmlgclCnstnt"/>  
      <powerSpectrumPrimordial value="powerLaw">
	<index value="0.961"/>
	<wavenumberReference value="1.0"/>
	<running value="0.0"/>
      </powerSpectrumPrimordial>
      <powerSpectrumPrimordialTransferred value="simple"/>
      <cosmologicalMassVariance value="filteredPower">
	<sigma_8 value="0.807"/>
	<monotonicInterpolation value="false"/>
	<powerSpectrumWindowFunction value="sharpKSpace">
	  <normalization value="2.5"/>
	</powerSpectrumWindowFunction>
      </cosmologicalMassVariance>
      <transferFunction value="eisensteinHu1999">
        <neutrinoNumberEffective value="3.044"/>
	<neutrinoMassSummed value="0.000"/>
      </transferFunction>
      <darkMatterProfileConcentration value="diemerJoyce2019"/>
    </reference>
  </darkMatterProfileConcentration>
<darkMatterProfileMinimumConcentration value="1.0e-3"/>
<darkMatterProfileMaximumConcentration value="1.0e+3"/>

  <!-- Galactic structure solver options -->
  <galacticStructureSolver        value="null"/>

  <!-- Switch off baryonic physics -->
  <hotHaloMassDistribution value="null"/>

  <!-- Tree evolution -->
  <mergerTreeNodeEvolver value="standard">
    <odeToleranceAbsolute value="0.01"/>
    <odeToleranceRelative value="0.01"/>
  </mergerTreeNodeEvolver>
  <mergerTreeEvolver value="standard">
    <timestepHostAbsolute value="1.0"/>
    <timestepHostRelative value="0.1"/>
  </mergerTreeEvolver>
  <mergerTreeEvolveTimestep value="multi">
    <mergerTreeEvolveTimestep value="simple">
      <timeStepAbsolute value="1.000" />
      <timeStepRelative value="0.000" />
    </mergerTreeEvolveTimestep>
    <mergerTreeEvolveTimestep value="satellite">
      <timeOffsetMaximumAbsolute value="0.010" />
      <timeOffsetMaximumRelative value="0.001" />
    </mergerTreeEvolveTimestep>
  </mergerTreeEvolveTimestep>
  <componentMergingStatistics value="standard"/>

<virialOrbit value="isotropic"   >
  <virialOrbit value="jiang2014" >
    <bRatioHigh value="+2.88333 +4.06371 +3.86726"/>
    <bRatioIntermediate value="+1.05361 +1.56868 +2.89027"/>
    <bRatioLow value="+0.07432 +0.54554 +1.04721"/>
    <gammaRatioHigh value="+0.07124 +0.04737 -0.01913"/>
    <gammaRatioIntermediate value="+0.10069 +0.07821 +0.04231"/>
    <gammaRatioLow value="+0.10866 +0.11260 +0.11698"/>
    <muRatioHigh value="+1.10168 +1.09639 +1.09819"/>
    <muRatioIntermediate value="+1.18205 +1.19573 +1.24581"/>
    <muRatioLow value="+1.22053 +1.22992 +1.25528"/>
    <sigmaRatioHigh value="+0.09244 +0.14335 +0.21079"/>
    <sigmaRatioIntermediate value="+0.07397 +0.09590 +0.10941"/>
    <sigmaRatioLow value="+0.07458 +0.09040 +0.06981"/>
  </virialOrbit>
</virialOrbit>

  <!-- Node evolution and physics -->
  <nodeOperator value="multi">
    <!-- Halo concentrations -->
    <nodeOperator value="darkMatterProfileScaleInterpolate"/>
  </nodeOperator>

  <!-- Output options -->
  <galacticusOutputFileName value="../../data1/new_k50_slope_test_ETHOS.hdf5"/>
  <outputTimes value="list">
    <redshifts value="0.0 1.0"/>
  </outputTimes>
  <mergerTreeOutputter value="standard">
    <outputReferences value="false"/>
  </mergerTreeOutputter>

</parameters>
